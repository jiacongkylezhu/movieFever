<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kylezhudev.moviefever.MovieDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardBackgroundColor="@color/primary_light">


            <TextView
                android:id="@+id/tv_movie_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/margin_x_small"
                android:text="@string/movie_title"
                android:textSize="@dimen/detail_movie_title_large_text" />

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_M"
            android:layout_marginTop="@dimen/margin_x_small"
            android:paddingStart="@dimen/margin_general">

            <ProgressBar
                android:id="@+id/pb_detail_load_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_detail_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/network_error"
                android:textSize="@dimen/subtitle_text_size_XS"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/img_detail_movie_thumbnail"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:layout_marginEnd="@dimen/margin_general"
                 />

            <TextView
                android:id="@+id/tv_released_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_x_small"
                android:layout_toEndOf="@id/img_detail_movie_thumbnail"
                android:text="2017"
                android:textSize="@dimen/subtitle_text_size_M" />

            <TextView
                android:id="@+id/tv_movie_runtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_released_year"
                android:layout_marginBottom="@dimen/margin_x_small"
                android:layout_toEndOf="@id/img_detail_movie_thumbnail"
                android:text="120min"
                android:textSize="@dimen/subtitle_text_size_M" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_movie_runtime"
                android:layout_marginBottom="@dimen/margin_x_small"
                android:layout_toEndOf="@id/img_detail_movie_thumbnail"
                android:text="7.5/10"
                android:textSize="@dimen/subtitle_text_size_S" />

            <Button
                android:id="@+id/btn_mark_as_favorite"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/tv_rating"
                android:layout_toEndOf="@id/img_detail_movie_thumbnail"
                android:background="@color/colorAccent"
                android:text="@string/mark_as_favorite"
                android:layout_marginTop="@dimen/margin_M"
                android:textColor="@color/secondary_text" />




        </RelativeLayout>

        <TextView
            android:id="@+id/tv_movie_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_M"
            android:layout_marginTop="@dimen/margin_general"
            android:text="@string/description" />

        <ImageView
            android:id="@+id/img_divider_0"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="@dimen/margin_x_small"
            android:background="@color/divider" />

        <FrameLayout
            android:id="@+id/fl_youtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <fragment
                android:name="com.google.android.youtube.player.YouTubePlayerSupportFragment"
                android:id="@+id/youTube_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large"/>

        </FrameLayout>




        <TextView
            android:id="@+id/tv_trailers_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_x_small"
            android:text="@string/more"
            android:textSize="@dimen/subtitle_text_size_M"
            android:textStyle="bold" />





        <RelativeLayout
            android:id="@+id/relative_layout_detail_trailer_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageView
                android:id="@+id/img_detail_not_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_not_interested_gray_48px"
                android:layout_marginStart="@dimen/margin_M"
                android:visibility="invisible"/>



            <ImageView
                android:id="@+id/img_play_arrow_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_marginStart="@dimen/margin_M"
                android:background="@drawable/ic_play_arrow_gray_48px"
                android:backgroundTint="@color/secondary_text"
                />

            <com.google.android.youtube.player.YouTubeThumbnailView
                android:id="@+id/trailer1_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/no_thumbnail"
                android:layout_marginTop="@dimen/margin_M"
                android:scaleType="center"/>


            <TextView
                android:id="@+id/tv_no_trailer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_trailer_available"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="@dimen/margin_M"
                android:layout_toEndOf="@+id/img_play_arrow_1"
                android:textSize="@dimen/subtitle_text_size_M"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_trailer_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                tools:text="@string/trailer_1"
                android:textSize="@dimen/subtitle_text_size_M"
                android:layout_below="@+id/img_detail_not_available"
                android:layout_toEndOf="@+id/trailer1_thumbnail"
                android:layout_marginTop="12dp" />


        </RelativeLayout>






    </LinearLayout>




</ScrollView>
